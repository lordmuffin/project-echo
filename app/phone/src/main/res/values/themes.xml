<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Phone -->
    <style name="Theme.ProjectEcho" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#03DAC6</item>
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- No action bar theme for main activity -->
    <style name="Theme.ProjectEcho.NoActionBar" parent="Theme.ProjectEcho">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <!-- Recording button style -->
    <style name="RecordingButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
</resources>
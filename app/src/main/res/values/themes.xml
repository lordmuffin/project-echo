<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Wear OS -->
    <style name="Theme.ProjectEcho" parent="Theme.Material3.Dark">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
    </style>

    <!-- No action bar theme for main activity -->
    <style name="Theme.ProjectEcho.NoActionBar" parent="Theme.ProjectEcho">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Recording button style -->
    <style name="RecordingButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
</resources>
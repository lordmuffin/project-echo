<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Wear OS -->
    <style name="Theme.ProjectEcho" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">#1976D2</item>
        <item name="android:colorAccent">#03DAC6</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
    </style>

    <!-- No action bar theme for main activity -->
    <style name="Theme.ProjectEcho.NoActionBar" parent="Theme.ProjectEcho">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Recording button style -->
    <style name="RecordingButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
</resources>